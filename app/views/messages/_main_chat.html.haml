.chat-main
  .chat-main__group-info
    .chat-main__group-info__left
      .chat-main__group-info__left__name
        test
      .chat-main__group-info__left__member
        Member：testさん
    .chat-main__group-info__icon
      = link_to root_path, class: "chat-main__group-info__icon__edit" do
        Edit

  .chat-main__messages
    .chat-main__messages__box
      .chat-main__messages__box__title
        test
      .chat-main__messages__box__time
        2020/05/23
    .chat-main__messages__message
      Hello

  .form
    %form.new_message
      .input-box
        %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        %label{class: "input-box__image"}
          = icon('far', 'image')
          %input{type: "file", class: "input-box__image__file"}
      %input{type: "submit", class: "submit-btn", value: "Send"}