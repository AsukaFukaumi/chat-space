.side-bar
  .side-bar__user-name
    .side-bar__user-name__top-items
      .side-bar__user-name__top-items__name
        = current_user.name
      .side-bar__user-name__top-items__icons
        = link_to new_group_path do
          = icon('fa', 'edit', class: "side-bar__user-name__top-items__icons__new-btn")
          %span<>
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: "side-bar__user-name__top-items__icons__edit-btn")
          %span<>

  .side-bar__group-list
    - current_user.groups.each do |group|
      .side-bar__group-list__bottom-groups
        = link_to group_messages_path(group) do
          .side-bar__group-list__bottom-groups__name
            = group.name
          .side-bar__group-list__bottom-groups__message
            = group.show_last_message